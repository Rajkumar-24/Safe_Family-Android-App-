<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/bigImg"
                                    android:layout_width="387dp"
                                    android:layout_height="155dp"
                                    android:layout_marginTop="70dp"

                                    android:adjustViewBounds="true"


                                    android:scaleType="centerCrop"
                                    android:src="@drawable/a"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:shapeAppearanceOverlay="@style/RoundCorner" />
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/smallImg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginLeft="5dp"

                            android:adjustViewBounds="true"


                            android:scaleType="centerCrop"
                            android:src="@drawable/beta"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/RoundCorner" />

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/chefName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vijay Singh"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold">

                                </TextView>

                                <TextView
                                    android:id="@+id/kitchenName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Beta Kitchen"
                                    android:textSize="18sp"
                                    android:textColor="#000000"

                                    android:textStyle="bold">

                                </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="7dp"
                            android:orientation="vertical"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/priceName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Rs 890"
                                    android:textColor="#000000"
                                    android:textSize="13sp"
                                    android:textStyle="bold">

                                </TextView>
                                <TextView
                                    android:id="@+id/rateName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="4.5"
                                    android:textColor="#000000"
                                    android:textSize="15sp"

                                    android:textStyle="bold">

                                </TextView>
                        </LinearLayout>

                </LinearLayout>


        </androidx.cardview.widget.CardView>

</LinearLayout>
