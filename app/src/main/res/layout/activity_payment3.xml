<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    tools:context=".PaymentActivity3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/pay_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Payment Summary"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Your order Details :"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <RelativeLayout
            android:id="@+id/R_layout1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#D9D9D9"
            android:layout_marginTop="70dp"
            android:padding="16dp">


            <TextView
                android:id="@+id/from_kitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="From Kitchen :"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Price :"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kitchenName11"
                android:layout_alignParentRight="true"
                android:text="60₹"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/kitchenimg"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/chef" />

            <TextView
                android:id="@+id/kitchenName11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/kitchenimg"
                android:layout_toRightOf="@+id/kitchenimg"
                android:text="Kitchen 1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kitchenName11"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/kitchenimg"
                android:layout_toRightOf="@id/kitchenimg"
                android:text="Plan Description"
                android:textSize="18sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/R_layout2"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:background="#D9D9D9"
            android:padding="16dp">

            <TextView
                android:id="@+id/Item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Item Total :"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="60.00"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Item_total"
                android:layout_marginVertical="8dp"
                android:text="Taxes &amp; charges  :"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="8dp"
                android:text="₹18.00"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/gtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tax"
                android:layout_marginVertical="10dp"
                android:text="Grand Total  :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price2"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="10dp"
                android:text="78.00"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pay_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price3"
                android:layout_alignParentRight="true"
                android:backgroundTint="#FEA116"
                android:text="pay"
                android:textColor="#7C0039"
                android:textSize="18sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>