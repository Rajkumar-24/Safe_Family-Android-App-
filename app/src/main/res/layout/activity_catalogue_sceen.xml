<?xml version = "1.0" encoding = "utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width = "match_parent"
        app:elevation="0dp"
        android:backgroundTint="#FEA116"
        android:layout_height = "wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id = "@+id/my_tool_bar"
            app:titleTextColor="#FFFFFF"
            android:paddingTop="2dp"
            android:background = "@drawable/appbar_curve"

            android:layout_width = "match_parent"
            android:layout_height = "?attr/actionBarSize"
            app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme = "@style/ThemeOverlay.AppCompat.Light" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAMMA KITCHEN"
                android:gravity="center"
                android:layout_marginLeft="129dp"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:textStyle="normal">

            </TextView>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="149dp"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="106dp"
                        android:background="@drawable/catalogue_top">

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"

                        android:layout_gravity="center"

                        app:cardCornerRadius="75dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/beta"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Menu"
                    android:textSize="24dp"
                    android:textStyle="normal"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="14dp"
                    android:layout_gravity="center"
                    android:textColor="#000000">

                </TextView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:cardBackgroundColor="#EEEEEE"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="21dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monday"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="7dp"

                            android:textColor="#FEA116">

                        </TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L- Mix Veg + Puri + Sweet Dish \nD- Mix Dal + Aaloo Bhujia + Roti + Rice"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"

                            android:textColor="#000000">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tuesday"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="7dp"

                            android:textColor="#FEA116">

                        </TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L- Chole Puri/Bathure + Salad/Pickles\nD- Urad/Moong Dal + Seasonal Veg + Roti + Rice"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"

                            android:textColor="#000000">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wednesday"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="7dp"

                            android:textColor="#FEA116">

                        </TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L- Arhar/Chana Dal + Salad/Pickles + Roti + Rice\nD- Kadhi + Rice + Aaloo Sabji +Roti"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="#000000">

                        </TextView>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>